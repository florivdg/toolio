---
import App from '@/layouts/App.astro'
import PageHeader from '@/components/PageHeader.astro'
import SignOutButton from '@/components/auth/sign-out-button.vue'
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'

const userSession = Astro.locals.session
---

<App>
  <PageHeader title="Account" />

  <section class="my-8">
    <!-- Display session info, adjust fields as needed -->
    <Card class="w-full max-w-4xl">
      <CardHeader>
        <CardTitle>Information zur Session</CardTitle>
        <CardDescription>
          Dies sind die Sitzungsinformationen für den angemeldeten Benutzer.
        </CardDescription>
      </CardHeader>
      <CardContent>
        <p>Nutzer-ID: {userSession!.userId}</p>
        <p>Erstellt am: {userSession!.createdAt}</p>
        <p>Läuft ab am: {userSession!.expiresAt}</p>
      </CardContent>
      <CardFooter>
        <SignOutButton client:load />
      </CardFooter>
    </Card>
  </section>
</App>
