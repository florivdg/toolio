---
interface Props {
  title: string
}

const { title } = Astro.props
---

<div class="md:flex md:items-center md:justify-between">
  <div class="min-w-0 flex-1">
    <h1
      class="text-foreground text-2xl/7 font-bold sm:truncate sm:text-3xl sm:tracking-tight"
    >
      {title}
    </h1>
  </div>
  <div class="mt-4 flex gap-2 md:mt-0 md:ml-4">
    <slot name="actions" />
  </div>
</div>
